{
  "compileOnSave": false,
  "exclude": ["dist"],
  "compilerOptions": {
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2019", "dom"],
    "module": "es2020",
    "baseUrl": "./",
    "paths": {
      "@owge/core": [
        "modules/owge-core/src/public-api"
      ],
      "@owge/universe": [
        "modules/owge-universe/src/public-api"
      ],
      "@owge/alliance": [
        "modules/owge-alliance/src/public-api"
      ],
      "@owge/widgets": [
        "modules/owge-widgets/src/public-api"
      ],
      "@owge/galaxy": [
        "modules/owge-galaxy/src/public-api"
      ],
      "@owge/faction": [
        "modules/owge-faction/src/public-api"
      ]
    }
  }
}
